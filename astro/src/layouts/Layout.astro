---
import { Font } from 'astro:assets';

export interface Props {
  title?: string;
  lang?: string;
}

const { title = 'SexyVoice.ai - AI Voice Generation & Cloning', lang = 'en' } =
  Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- SEO Meta Tags -->
		<meta name="description" content="Transform text into lifelike speech with advanced AI voice generation and cloning technology. Perfect for content creators, developers, and businesses." />
		<meta name="keywords" content="AI voice generation, voice cloning, text to speech, voice synthesis, AI audio" />
		<meta name="author" content="SexyVoice.ai" />

		<!-- Open Graph Meta Tags -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Transform text into lifelike speech with advanced AI voice generation and cloning technology." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://sexyvoice.ai" />
		<meta property="og:image" content="/og-image.jpg" />

		<!-- Twitter Card Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
