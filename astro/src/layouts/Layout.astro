		<meta name="twitter:description" content="Transform text into lifelike speech with advanced AI voice generation and cloning technology." />
		<meta name="twitter:image" content="/og-image.jpg" />

		<!-- Preconnect to external domains for performance -->
		<link rel="preconnect" href="https://uxjubqdyhv4aowsi.public.blob.vercel-storage.com" />

		<!-- Theme Color -->
		<meta name="theme-color" content="#1e40af" />

		<!-- Fonts -->
